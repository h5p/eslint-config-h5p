{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    // Customize or override specific ESLint rules for your package
    "no-unused-vars": ["error", { "args": "none", "varsIgnorePattern": "config|languageConfig" }],
    "no-underscore-dangle": ["error", { "allow": ["_interopRequireDefault", "__esModule"] }],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never"
      }
    ],
    "quote-props": ["error", "as-needed"],
    "max-len": ["error", { "code": 100 }]
  }
}